<% if spree_current_user %>
  <li class="dropdown">
    <a data-toggle="dropdown" class="dropdown-toggle" href="#"> <%= spree_current_user.email %> <b class="caret"></b></a>
    <ul id="login-nav" class="dropdown-menu">
      <li data-hook="user-account-link"><%= link_to t(:account), spree.edit_spree_user_path(spree_current_user) %></li>
      <li data-hook="user-logout-link"><%= link_to t(:logout), spree.destroy_spree_user_session_path %></li>
      <li data-hook="store-frontend-link"><%= link_to t(:store), spree.products_path, :target => '_blank' %></li>
    </ul>
  </li>
<% end %>
