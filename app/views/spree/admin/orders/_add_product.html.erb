<%= render :partial => "spree/admin/variants/autocomplete", :formats => :js %>

<div id="add-line-item" data-hook class="well">
  <fieldset>
    <legend align="center"><%= t(:add_product) %></legend>
    <div class="row-fluid">
      <div data-hook="add_product_name" class="span10">
        <%= label_tag :add_product_name, t(:name_or_sku) %>
        <%= hidden_field_tag :add_variant_id, "", :class => "variant_autocomplete fullwidth" %>
      </div>

      <div data-hook="add_quantity" class="span2 add-quantity">
        <%= label_tag :add_quantity, t(:qty) %>
        <%= number_field_tag :add_quantity,  1, :min => 0 %>
      </div>
    </div>
    
    <div data-hook="add_button" class="actions">
      <%= link_to t(:add), admin_order_line_items_url(@order),
                  :method => :post,
                  :id => 'add_line_item_to_order',
                  :class => 'btn btn-primary',
                  'data-update' => 'order-form-wrapper' %>
    </div>

  </fieldset>
</div>
