<table class="table table-bordered table-striped table-condensed table-hover" id='listing_taxonomies' data-hook data-sortable-link="<%= update_positions_admin_taxonomies_url %>">
  <thead>
    <tr data-hook="taxonomies_header">
      <th><%= t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @taxonomies.each do |taxonomy| %>
      <tr id="<%= spree_dom_id taxonomy %>" data-hook="taxonomies_row" class="<%= cycle('odd', 'even')%>">
        <td>
          <span class="handle"></span>
          <%= taxonomy.name %>
        </td>
        <td class="actions">
          <%= link_to_edit taxonomy.id, :no_text => true %>
          <%= link_to_delete taxonomy, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
